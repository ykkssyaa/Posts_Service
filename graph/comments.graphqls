
type Comment{
    id: ID!
    createdAt: Time!
    author: String!
    content: String!
    post: ID!
    replies: [Comment!]
    replyTo: ID
}

input InputComment{
    author: String!
    content: String!
    post: ID!
    replyTo: ID
}

extend type Mutation {
    CreateComment(input: InputComment!): Comment!
}

type Subscription{
    CommentsSubscription(postId:ID!):Comment!
}